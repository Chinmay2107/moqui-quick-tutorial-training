<?xml version="1.0" encoding="UTF-8"?>
<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-3.xsd">
    <transition name="createSubject">
        <service-call name="create#example.Subject"/>
        <default-response url="."/>
    </transition>
    <actions>
        <entity-find entity-name="example.Subject" list="subjectsList">
            <search-form-inputs/>
        </entity-find>
    </actions>
    <widgets>
        <container-dialog id="CreateSubjectDialog" button-text="Create Subject">
            <form-single name="CreateSubject" transition="createSubject">
                <auto-fields-entity entity-name="example.Subject" field-type="edit"/>
                <field name="submitButton"><default-field title="Create"><submit/></default-field></field>
            </form-single>
        </container-dialog>
        <form-list name="ListSubjects" list="subjectsList" header-dialog="true" skip-form="true">
            <auto-fields-entity entity-name="example.Subject" field-type="find-display"/>
            <field name="description">
                <header-field show-order-by="true"><text-find hide-options="true"/></header-field>
                <default-field><display/></default-field>
            </field>
        </form-list>
    </widgets>
</screen>